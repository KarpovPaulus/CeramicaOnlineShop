@model Login

<form method="post">
    <div class="row">
        <h2>Вход</h2>

        <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>
        <div class="col">
            <div>
                <label asp-for="UserName">Введите логин</label><br /> 
                <input name="UserName" /> <br />
                <span asp-validation-for="UserName" class="text-danger"></span> <br />
            </div>

            <div>
                <label asp-for="Password">Введите пароль</label><br />
                <input name="Password" /> <br />
                <span asp-validation-for="Password" class="text-danger"></span> <br />
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    Запомнить меня?
                </label>
            </div>
            
            <br />
                 <button class="btn btn-success type="submit" asp-controller="Account" asp-action="Login">Войти</button>
            <br />
            
            <p><a class="link-opacity-100" href="/Account/Register/">Регистрация нового пользователя</a></p>
        </div>
        
    </div>
   
</form>