
@model List<Role>
<div class="row">
    @await Html.PartialAsync("AdminLeftMenu")

    <div class="col-9">
        <div class="row"><h3>Список ролей</h3></div><br />

        <a class="btn btn-success"
            asp-area="Admin"
            asp-controller="Role"
            asp-action="Add"
            role="button">Добавить новую роль</a><br />
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th>№</th>
                        <th>Название</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@Model[i].Name</td>
                            <td>
                                <a class="btn btn-success"
                                asp-area="Admin"
                                asp-controller="Role"
                                asp-action="Remove"
                                asp-route-roleName="@Model[i].Name"
                                role="button">Удалить</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
