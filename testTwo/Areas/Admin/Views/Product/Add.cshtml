@model Product
<form method="post">
    <div class="row">
        <h2>Добавить новый продукт</h2>

        <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>
        <div class="col">
            <div>
                <label asp-for="Name">Название товара</label><br />
                <input name="Name" /> <br />
                <span asp-validation-for="Name" class="text-danger"></span> <br />
            </div>

            <div>
                <label asp-for="Cost">Цена товара</label><br />
                <input type="number" name="Cost" /> <br />
                <span asp-validation-for="Cost" class="text-danger"></span> <br />
            </div>

            <div>
                <label asp-for="Description">Описание товара</label><br />
                <input name="Description" /> <br />
                <span asp-validation-for="Description" class="text-danger"></span> <br />
            </div>

            <br />
            <button class="btn btn-success type="submit"
                asp-area="Admin"
                asp-controller="Product" 
                asp-action="Add">Добавить</button>
            <br />
        </div>

    </div>

</form>
